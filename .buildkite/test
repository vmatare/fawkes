SCRIPT_PATH=$(dirname $(readlink -f ${BASH_SOURCE[0]}))

# Source standard environment
source $SCRIPT_PATH/environment.sh

# Error out on any error in the script, pipes etc.
set -euo pipefail

# Run tests
$MAKE -j$NPROC test

shopt -s nullglob
if [ -n "${BASEDIR-}" ] ; then
  for f in $BASEDIR/.buildkite/tests.d/* ; do
    eval $f
  done
fi

if [ -n "${TOP_BASEDIR-}" ] ; then
  export TOP_BASEDIR
  for f in $TOP_BASEDIR/.buildkite/tests.d/* ; do
    eval $f
  done
fi
